{% extends "layout.html.j2" %}
{% block title %} Demo {% endblock %}
{% block content %}

  <div class="row mb-4">
    <div class="col-md-8 mx-auto text-center">
      <h3>Copy a job description into the form below and upload your resume, our AI will do the rest!</h3>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-8 mx-auto">
    <form action="#" method="POST" enctype="multipart/form-data" class="text-center" id="cover-letter-input">
      <div class="form-group mb-3">
        <label for="resume"> Resume: </label>
        <input id="resume" type="file" name="file" accept=".docx" required>
      </div>
      
        <input id="job_title" name="jobTitle" placeholder="Job Title" required><br><br>
        <input id="company" name="company" placeholder="Company" required><br><br>
        <div class="form-group">
          <label for="jobSpec">Job Spec:</label>
          <textarea class="form-control" id="job_input" name="jobSpec" rows="18" required></textarea><br><br>
        </div>
        <div class="form-group">
          <button type="submit">Submit</button>
        </div>
      </form>
    </div>
  </div>



{% endblock %}