{% extends "layout.html.j2" %}
{% block title %} Sign Up {% endblock %}
{% block content %}

  <div class="row mb-4">
    <div class="col-md-8 mx-auto text-center">
      <h3>Automated Cover Letters</h3>
      <p>Enter your email to get started.</p>
    </div>
  </div>
  <div class="row mb-4">
    <div class="col-md-8 mx-auto">
      <form action="#" method="POST" class="text-center" id="signup_form">
          <input id="job_input" name="email" placeholder="Email" required><br><br>
          <input id="password_input" name="password" placeholder="Password" required><br><br>
          <input id="confirm_password_input" name="confirm_password" placeholder="Confirm Password" required><br><br>
          <button type="submit">Submit</button>
      </form>
    </div>
  </div>
</div>

{% endblock %}